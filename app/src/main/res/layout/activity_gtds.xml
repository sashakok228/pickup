<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GtdsActivity"
    android:orientation="vertical"
    android:background="@drawable/tema3"
    >
    <TextView
        android:text="Готовые словари"
        android:textStyle="bold"
        android:textAppearance="@style/dobavit"
        android:fontFamily="@font/ubuntu"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        />
        <LinearLayout
            android:id="@+id/zg1"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="22sp"
                android:text="Начальные глаголы"
                android:textStyle="bold"
                android:textAppearance="@style/dobavit"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/btn_gt1"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:text="Нажмите сюда чтобы загрузить"
                android:textStyle="italic"
                android:textAppearance="@style/dobavit"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/white"
                />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/zg2"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:text="Начальные существительные"
            android:textStyle="bold"
            android:textAppearance="@style/dobavit"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/btn_gt2"
            android:clickable="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:text="Нажмите сюда чтобы загрузить"
            android:textStyle="italic"
            android:textAppearance="@style/dobavit"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>