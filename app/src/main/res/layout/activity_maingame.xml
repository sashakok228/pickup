<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivitygame"
    android:background="@drawable/tema"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    android:orientation="vertical"
    >
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:id="@+id/nameddgsgdss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя словаря:"
        android:textColor="@color/black"
        android:textSize="25sp"
        />
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/nameds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25sp"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <TextView
            android:visibility="gone"
            android:id="@+id/textZap"
            android:textSize="38sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Слово"
            android:layout_gravity="center"
            />
            <androidx.appcompat.widget.AppCompatButton
                android:visibility="visible"
                android:id="@+id/sluh"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:background="@drawable/mic"
                android:layout_gravity="center"
                />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/peres"
                    android:visibility="gone"
                    android:layout_marginTop="55dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Перевод"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_marginTop="30dp"
                    android:visibility="gone"
                    android:id="@+id/nadp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Прослушайте слово и напишите ответ"
                    />

                    <EditText
                        android:id="@+id/textvvod"
                        android:textAlignment="center"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:textSize="20sp"
                        android:visibility="gone"
                        />

                <TextView
                    android:id="@+id/podskaska"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Подсказска"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lri3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        >
                        <androidx.appcompat.widget.AppCompatButton
                            android:background="@drawable/blokigr"
                            android:fontFamily="@font/ubuntu"
                            android:lineHeight="66sp"
                            android:textAppearance="@style/sligr"
                            android:textColor="@color/white"
                            android:layout_marginTop="14dp"
                            android:textSize="20sp"
                            android:id="@+id/otv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Слово 1"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        >
                        <androidx.appcompat.widget.AppCompatButton
                            android:background="@drawable/blokigr"
                            android:fontFamily="@font/ubuntu"
                            android:lineHeight="66sp"
                            android:textSize="20sp"

                            android:textAppearance="@style/sligr"
                            android:textColor="@color/white"
                            android:layout_marginTop="14dp"
                            android:id="@+id/otv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Слово 2"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lri2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:orientation="vertical"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/blokigr"
                        android:fontFamily="@font/ubuntu"
                        android:lineHeight="66sp"
                        android:textSize="20sp"
                        android:textAppearance="@style/sligr"
                        android:textColor="@color/white"
                        android:id="@+id/otv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Слово 3"
                        android:layout_marginTop="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lri1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        >
                        <androidx.appcompat.widget.AppCompatButton
                            android:background="@drawable/blokigr"
                            android:fontFamily="@font/ubuntu"
                            android:lineHeight="66sp"
                            android:textSize="20sp"
                            android:textAppearance="@style/sligr"
                            android:textColor="@color/white"
                            android:layout_marginTop="14dp"
                            android:id="@+id/otv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Слово 4"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        >
                        <androidx.appcompat.widget.AppCompatButton
                            android:background="@drawable/blokigr"
                            android:fontFamily="@font/ubuntu"
                            android:lineHeight="66sp"
                            android:textSize="20sp"

                            android:textAppearance="@style/sligr"
                            android:textColor="@color/white"
                            android:layout_marginTop="14dp"
                            android:id="@+id/otv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Слово 5"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:textAppearance="@style/dobavit"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/sledsl"
                    android:textColor="@color/white"
                    android:background="@drawable/sledslovo"
                    android:id="@+id/dal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:textAppearance="@style/dobavit"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/white"
                    android:id="@+id/stop22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Стоп"
                    android:layout_gravity="center"
                    android:background="@drawable/stop"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>