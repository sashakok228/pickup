<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity31"
    android:background="@drawable/tema2"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/nazad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/strelka"

            />

        <TextView
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:text="Создание словаря"
            android:textSize="35sp"
            android:textColor="#000000"
            android:gravity="center_horizontal|top"
            android:textStyle="bold"

            />
        <ImageView
            android:layout_marginLeft="25dp"
            android:layout_width="290dp"
            android:layout_height="20dp"
            android:background="@drawable/sozdw"
            />
    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/book"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            app:counterTextColor="@color/Cray"
            app:boxStrokeColor="@color/Cray"
            app:hintTextColor="@color/Cray"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_SLOVAR"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="15"
                android:hint="Имя словаря"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sohr"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:height="53sp"
                android:background="@drawable/nazad"
                android:fontFamily="@font/ubuntu"
                android:text="Создать"
                android:textAppearance="@style/sohr"
                android:textColor="@color/white" />

        <TextView
            android:id="@+id/cuct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:clickable="true"
            android:text="Добавить существующие словари"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>