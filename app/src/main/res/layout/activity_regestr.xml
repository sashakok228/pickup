<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_regestr">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:textSize="25pt"
        android:textColor="@color/white"
        android:layout_marginTop="21dp"
        android:layout_gravity="center"
        android:id="@+id/pick_up"
        android:layout_width="250dp"
        android:layout_height="67dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center_horizontal|top"
        android:lineHeight="57sp"
        android:text="@string/pick_up"
        />
    <TextView
        android:textSize="15pt"
        android:textColor="@color/white"
        android:layout_marginTop="21dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="67dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center_horizontal|top"
        android:lineHeight="57sp"
        android:text="Регистрация"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:background="@drawable/bigblok"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <EditText
            android:id="@+id/name2"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:hint="name"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/mail2"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:hint="mail"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:id="@+id/pass22"
            android:textAlignment="center"
            android:hint="pass"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:inputType="textPassword"

            android:textColor="@color/white"
            android:id="@+id/pass2"
            android:textAlignment="center"
            android:hint="pass"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:id="@+id/reg"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:text="Регистрация"
            android:textAppearance="@style/perevodsam"
            android:fontFamily="@font/ubuntu"
            android:lineHeight="23sp"
            android:layout_gravity="center"
            android:background="@drawable/perevodsam"
            />
        <TextView
            android:clickable="true"
            android:id="@+id/auth22"
            android:textSize="8pt"
            android:textColor="@color/white"
            android:layout_marginTop="21dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:gravity="center_horizontal|top"
            android:lineHeight="57sp"
            android:text="У вас уже есть аккаунт?"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/nazad234"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/nazad"
        android:text="@string/nazad"
        android:textAppearance="@style/nazad"
        android:fontFamily="@font/ubuntu"
        android:lineHeight="53sp"
        />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>