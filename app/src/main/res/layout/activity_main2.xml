<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/nazad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/left"
            />

        <TextView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:id="@+id/some_id"
            android:layout_width="250dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="@string/lernwords"
            android:textAppearance="@style/zagolov"
            />



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/bigblok2"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/easy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/blok"
                    android:orientation="vertical"
                    android:clickable="true"
                    >
                    <TextView
                        android:id="@+id/ea1"
                        android:text="Лeгко"
                        android:layout_marginTop="55dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.58"
                    android:background="@color/white"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/blok2"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:id="@+id/sredn"
                    >
                    <TextView
                        android:id="@+id/sr1"
                        android:text="Средний"
                        android:layout_marginTop="55dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.58"
                android:background="@color/white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:background="@drawable/blok3"
                    android:id="@+id/difcl"
                    >
                    <TextView
                        android:id="@+id/t1"
                        android:text="Тяжёлый"
                        android:layout_marginTop="55dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.58"
                    android:background="@color/white"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:id="@+id/practic"
                    android:background="@drawable/blok4"
                    >
                    <TextView
                        android:id="@+id/p1"
                        android:text="Практика"
                        android:layout_marginTop="55dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/pod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="10pt"
            android:text="Подсказки  "
            />

        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:id="@+id/start2"
            android:layout_width="275dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/nachat"
            android:text="@string/nachat"
            android:textAppearance="@style/nachat"
            android:fontFamily="@font/ubuntu"
            android:lineHeight="53sp"
            />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>