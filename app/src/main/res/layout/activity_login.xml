<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:textSize="25pt"
        android:textColor="@color/white"
        android:layout_marginTop="21dp"
        android:layout_gravity="center"
        android:id="@+id/pick_up"
        android:layout_width="250dp"
        android:layout_height="67dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center_horizontal|top"
        android:lineHeight="57sp"
        android:text="@string/pick_up"
        />
    <TextView
        android:textSize="15pt"
        android:textColor="@color/white"
        android:layout_marginTop="21dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="67dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center_horizontal|top"
        android:lineHeight="57sp"
        android:text="Авторизация"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bigblok"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mail222"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:hint="mail"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/pass222"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="pass"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/dang"
            android:text="Не верно ввидён логин, либо пароль"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textAppearance="@style/dobavit"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/auth"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/perevodsam"
            android:fontFamily="@font/ubuntu"
            android:lineHeight="23sp"
            android:text="Войти"
            android:textAppearance="@style/perevodsam"
            android:textColor="@color/white" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:textAppearance="@style/dobavit"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/nazad2343"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/nazad"
        android:text="@string/nazad"
        android:lineHeight="53sp"
        />

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>